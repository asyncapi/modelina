{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "shipping_address": {
      "$id": "shipping_address",
      "allOf": [
        {
          "type": "object",
          "properties": {
            "street_address": { "type": "string" },
            "city":           { "type": "string" },
            "state":          { "type": "string" }
          },
          "required": ["street_address", "city", "state"]
        },
        { 
          "properties": { 
            "type": { 
              "enum": [ "residential", "business" ] 
            } 
          },
          "required": ["type"]
        }
      ]
    }
  }
}